<button id="htmlGenBtn" title="Generate HTML">üõ†Ô∏è</button>

<div id="htmlGenModal">
  <div id="htmlGenModalContent">
    <span class="close-modal" onclick="document.getElementById('htmlGenModal').style.display='none'">&times;</span>
    <h3>üõ†Ô∏è Web Page HTML Generator</h3>

    <input id="title" placeholder="Page Title">
    <textarea id="description" rows="2" placeholder="Page Description"></textarea>
    <input id="thumbnail" placeholder="Thumbnail Image URL">
    <textarea id="content" rows="3" placeholder="Main Page Content (HTML allowed)"></textarea>
    <input id="phone" placeholder="Phone Number">
    <input id="address" placeholder="Address">
    <textarea id="contactForm" rows="2" placeholder="Contact Form HTML (optional)"></textarea>
    <input id="website" placeholder="Website URL">

    <button onclick="generateHTML()">Generate HTML</button>
    <button onclick="copyOutput()">üìã Copy</button>
    <button onclick="downloadHTML()">‚¨áÔ∏è Download</button>

    <div id="visitWebsiteBtn"></div>
    <div id="htmlOutputArea"></div>
  </div>
</div>

<script>
  document.getElementById("htmlGenBtn").onclick = function () {
    document.getElementById("htmlGenModal").style.display = "block";
  }

  function generateHTML() {
    const title = document.getElementById("title").value.trim();
    const description = document.getElementById("description").value.trim();
    const thumbnail = document.getElementById("thumbnail").value.trim();
    const content = document.getElementById("content").value.trim();
    const phone = document.getElementById("phone").value.trim();
    const address = document.getElementById("address").value.trim();
    const contactForm = document.getElementById("contactForm").value.trim();
    const website = document.getElementById("website").value.trim();

    const inputs = [title, description, thumbnail, content, phone, address, contactForm, website];
    const filled = inputs.filter(i => i !== "").length;

    if (filled < 4) {
      alert("Please fill at least 4 fields.");
      return;
    }

    const html = `<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>${title}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  ${description ? `<meta name="description" content="${description}">` : ''}
  ${thumbnail ? `<meta property="og:image" content="${thumbnail}">` : ''}
  <style>
    body { font-family: Arial, sans-serif; margin: 20px; background: #f9f9f9; }
    header { text-align: center; }
    .content { margin-top: 20px; }
    footer { margin-top: 40px; padding: 20px; background: #eee; }
    img { max-width: 100%; border-radius: 10px; }
    .green-btn {
      display: inline-block;
      background: #22c55e;
      color: white;
      padding: 10px 16px;
      text-decoration: none;
      border-radius: 6px;
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <header>
    <h1>${title}</h1>
    ${thumbnail ? `<img src="${thumbnail}" alt="Thumbnail">` : ''}
    ${description ? `<p>${description}</p>` : ''}
  </header>
  <main class="content">
    ${content}
    ${website ? `<br><a class="green-btn" href="${website}" target="_blank">Visit Website</a>` : ''}
  </main>
  <footer>
    ${phone ? `<p><strong>Phone:</strong> ${phone}</p>` : ''}
    ${address ? `<p><strong>Address:</strong> ${address}</p>` : ''}
    ${contactForm ? `<h3>Contact Us</h3>${contactForm}` : ''}
  </footer>
</body>
</html>`;

    document.getElementById("htmlOutputArea").textContent = html;
    document.getElementById("visitWebsiteBtn").innerHTML = website ? `<a href="${website}" target="_blank">üåê Visit Website</a>` : '';
  }

  function copyOutput() {
    const output = document.getElementById("htmlOutputArea").textContent;
    navigator.clipboard.writeText(output).then(() => alert("Copied to clipboard!"));
  }

  function downloadHTML() {
    const output = document.getElementById("htmlOutputArea").textContent;
    const blob = new Blob([output], { type: "text/html" });
    const link = document.createElement("a");
    link.href = URL.createObjectURL(blob);
    link.download = "generated_page.html";
    link.click();
  }
</script>
